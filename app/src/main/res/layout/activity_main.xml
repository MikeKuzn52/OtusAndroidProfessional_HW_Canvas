<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <otus.homework.canvas.PieChartView
        android:id="@+id/PieChartView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColor="#B6FAA7"
        app:defaultGap="0.363636363636367dp"
        app:padding="20dp"
        app:defaultWidth="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BtnShowFullJson"
            android:textAllCaps="false"
            android:onClick="onFull"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/BtnShowMySectors"
            android:textAllCaps="false"
            android:onClick="onMySectors"/>
    </LinearLayout>

</LinearLayout>